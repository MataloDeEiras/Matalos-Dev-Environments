{
  "name": "Python",
  "remoteUser": "developer",
  "workspaceFolder": "/home/developer/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/developer/workspace,type=bind",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "kevinrose.vsc-python-indent", "donjayamanne.python-environment-manager", "njpwerner.autodocstring"]
    }
  },
  "postCreateCommand": "sed -i -e 's/\r$//' .devcontainer/postCreateCommand.bash && echo \"developer\n\" | sudo -k -S ./.devcontainer/postCreateCommand.bash",
  "postStartCommand": "sed -i -e 's/\r$//' .devcontainer/postStartCommand.bash && echo \"developer\n\" | sudo -k -S ./.devcontainer/postStartCommand.bash",
  "dockerFile": "Dockerfile",
  "runArgs": ["-p", "3389:3389", "--name", "dev-environment-python", "--privileged"]
}
